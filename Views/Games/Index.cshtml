@using GoFish.Models

<form action="/reset-game" method="POST">
  <button type="submit">Reset Game</button>
</form>

<h1>@Model.Name</h1>

<p>Computer Pairs: @Model.Computer.Pairs</p>

<p>Player 1 Pairs: @Model.Player.Pairs</p>


@if(@Model.CurrentPlayerDrawCard)
{
  <form action="/draw" method="POST">
    <button type="submit">Draw Card</button>
  </form>
}
else
{
  <form action="/draw" method="POST">
    <button type="submit" disabled>Draw Card</button>
  </form>
}


@foreach(Card card in @Model.Player.Hand)
{
  <form action="/take-turn" method="POST">
    <input type="text" name="cardValue"  id="cardValue" value="@card.Value" hidden>
    <input type="text" name="cardSuit" id="cardSuit" value="@card.Suit" hidden>
    <button type="submit" disabled="@Model.CurrentPlayerDrawCard">@card.Value of @card.Suit</button>
  </form>
}